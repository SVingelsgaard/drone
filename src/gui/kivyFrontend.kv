WindowManager:
    StartScreen:
    MainScreen:


#where the grapics is created
<StartScreen>:
    Label:
        pos: 0, 0
        text: "press to start"

    Button:
        size: root.size
        opacity: 0
        on_release:
            root.manager.transition.duration = '0'#fyfy
            app.root.current = "mainScreen"
            app.runApp()
    
        
<MainScreen>:
    name: "mainScreen"

    canvas.before:
        PushMatrix:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        PopMatrix:

    ControlPanel:
        ProcessView:
            size_hint: None, None
            size: 400, 400
            pos_hint: {"right": 1, "top": 1}
            canvas.before:
                Color:
                    rgba: .2, .2, .2, 1
                Rectangle:
                        # self here refers to the widget i.e FloatLayout
                    pos: self.pos
                    size: self.size

            Image:
                pos: self.parent.pos
                size: self.texture_size
                source: "src\gui\static\images\drone.png"
            
            CircularProgressBar:
                id: LFoutGui
                widget_size: 100
                thickness: 5
                pos: 155, 450

            CircularProgressBar:
                id: LBoutGui
                widget_size: 100
                thickness: 5
                pos: 155, 203

            CircularProgressBar:
                id: RFoutGui
                widget_size: 100
                thickness: 5
                pos: 401, 450

            CircularProgressBar:
                id: RBoutGui
                widget_size: 100
                thickness: 5
                pos: 401, 203

            
