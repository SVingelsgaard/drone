WindowManager:
    StartScreen:
    MainScreen:


#where the grapics is created
<StartScreen>:
    Label:
        pos: 0, 0
        text: "press to start"

    Button:
        size: root.size
        opacity: 0
        on_release:
            root.manager.transition.duration = '0'#fyfy
            app.root.current = "mainScreen"
            app.runApp()
    
        
<MainScreen>:
    name: "mainScreen"

    canvas.before:
        PushMatrix:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        PopMatrix:

    ControlPanel:
        size: root.size
        ProgressView:
            Image:
                size: root.size
                source: "static/images/drone.png"

            
